{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "preserve",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@/components": ["components"],
      "@/components/*": ["components/*"],
      "@/containers": ["containers"],
      "@/containers/*": ["containers/*"],
      "@/contexts": ["contexts"],
      "@/contexts/*": ["contexts/*"],
      "@/helpers": ["helpers"],
      "@/helpers/*": ["helpers/*"],
      "@/hooks": ["hooks"],
      "@/hooks/*": ["hooks/*"],
      "@/pages": ["pages"],
      "@/pages/*": ["pages/*"],
      "@/settings": ["settings"],
      "@/settings/*": ["settings/*"],
      "@/slices": ["slices"],
      "@/slices/*": ["slices/*"],
      "@/types": ["types"],
      "@/types/*": ["types/*"],
      "@/vendors": ["vendors"],
      "@/vendors/*": ["vendors/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    /* Help Babel transpile files. */
    "isolatedModules": true
  },
  "exclude": ["node_modules", "public", "scripts", "typings"],
  "include": ["src/**/*"]
}
