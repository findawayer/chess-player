{
  "compilerOptions": {
    "lib": ["esnext"],
    "isolatedModules": true,
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "~/": ["src"],
      "~/*": ["src/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
