{
  "name": "chess-player-backend",
  "version": "1.0.0",
  "description": "GraphQL server for chess-player app.",
  "main": "src/index.ts",
  "homepage": "https://chess-player.vercel.app/",
  "author": "Tae Sung, Lim <findawayer@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "graphql",
    "prisma",
    "postgresql",
    "nexus"
  ],
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --no-notify --respawn --transpile-only ./src",
    "build": "yarn generate && webpack --progress",
    "generate": "prisma generate && ts-node --transpile-only ./src/database/schema",
    "database": "prisma studio",
    "database:commit": "prisma migrate dev --preview-feature",
    "database:push": "prisma migrate deploy --preview-feature",
    "format": "prettier --write .",
    "lint": "eslint --fix --ext .js,.json,.ts ."
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "prisma": {
    "schema": "src/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^2.13.1",
    "apollo-server-express": "^2.19.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "jsonwebtoken": "^8.5.1",
    "microframework": "^0.6.4",
    "module-alias": "^2.2.2",
    "nexus": "^1.0.0",
    "nexus-plugin-prisma": "^0.27.0",
    "nodemailer": "^6.4.17",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@prisma/cli": "^2.13.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.16",
    "@types/nodemailer": "^6.4.0",
    "@types/validator": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "ts-babel-node": "^1.1.1",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0",
    "webpack-node-externals": "^2.5.2"
  }
}
