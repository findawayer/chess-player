// Database to connect to.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

// Assets created by `prisma generate` command.
generator client {
  provider = "prisma-client-js"
}

//
model User {
  // Credentials
  id               Int             @id @default(autoincrement())
  email            String          @unique
  password         String
  // Information
  name             String
  role             Role            @default(USER)
  verified         Boolean         @default(false)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  // Password recovery
  resetToken       String?
  resetTokenExpiry Int?
  // Preferences
  chessBoardTheme  ChessBoardTheme @default(ARCTIC)
  autoPromotion    Boolean         @default(false)
  highlightMoves   Boolean         @default(true)
  showLegalMoves   Boolean         @default(true)
}

enum Role {
  SUPERUSER
  ADMIN
  USER
}

enum ChessBoardTheme {
  ARCTIC
  GOLDEN
  LOYAL
}
