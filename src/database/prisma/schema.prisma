generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  password         String
  name             String?
  role             Role     @default(USER)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  resetToken       String?
  resetTokenExpiry Int?
}
